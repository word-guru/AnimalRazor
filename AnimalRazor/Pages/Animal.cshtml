@page 
@using AnimalRazor.Models
@model AnimalRazor.Pages.AnimalModel
@{
    ViewData["Title"] = "Animals";

}

<div class="text-centr">
    <h1 class="display-4">Animals</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Sound</th>
        </tr>
    </thead>
  
        @foreach (var item in Model._model)
        {
          <tr>
            <td>@item.GetType()</td>
            <td>@item.GetSound()</td>
          </tr>
        }   
        
    
</table>

<form method="post">
    <button type="submit" asp-page-handler="saveFile">Save File</button>
</form>
<form method="get">
    <button type="submit" asp-page-handler="ReadFile">Read Filee</button>
</form>